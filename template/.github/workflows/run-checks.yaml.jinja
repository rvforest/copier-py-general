name: Run Checks

on:
  pull_request:
    branches:
      - main
  push:
    branches:
      - main

env:
  FORCE_COLOR: 1

jobs:
  run-checks:
    name: Run checks
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4

      - name: Install uv
        uses: astral-sh/setup-uv@v5

      - name: Set up Python
        run: uv python install

      - name: Run checks
        run: uv run pre-commit run --all-files --show-diff-on-failure
